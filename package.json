{
    "name": "phaser-es6-webpack",
    "version": "2.0.0",
    "description": "A bootstrap project for create games with Phaser + ES6 + Webpack.",
    "author": "leandro cabrera <leandcabrera@gmail.com>",
    "main": "index.js",
    "scripts": {
        "generate:schema-dialog": "typescript-json-schema \"src/gameplay/types/**/*.ts\" \"Dialog\" -o ./generated/schemas/dialog.json --required --noExtraProps --titles",
        "generate:schema-characters": "typescript-json-schema \"src/gameplay/types/**/*.ts\" \"Characters\" -o ./generated/schemas/characters.json --required --noExtraProps --titles",
        "generate:schema-level": "typescript-json-schema \"src/gameplay/types/**/*.ts\" \"Level\" -o ./generated/schemas/level.json --required --noExtraProps --titles",
        "generate:resolve-json-refs": "node scripts/resolve-ref.js",
        "generate": "run-p generate:*",
        "start": "webpack serve",
        "watch:webpack": "webpack --watch",
        "watch:general": "npm-watch",
        "watch": "run-p watch:*",
        "format:verify": "prettier --list-different 'src/**/*.{js,json,ts}'",
        "format": "prettier --write 'src/**/*.{js,json,ts}'",
        "test": "jest",
        "add:level": "node scripts/add-level.js",
        "validate:json": "node scripts/validate-json.js"
    },
    "watch": {
        "generate": "src/config/**/*.json",
        "validate:json": "generated/config/**/*.json"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.20.7",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@types/jest": "^29.2.4",
        "@types/webfontloader": "^1.6.35",
        "ajv": "^8.12.0",
        "babel-eslint": "^9.0.0",
        "babel-jest": "^29.3.1",
        "babel-loader": "8.0.2",
        "browser-sync": "^2.18.13",
        "browser-sync-webpack-plugin": "^2.2.2",
        "cli": "^1.0.1",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "^5.5.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-node": "^7.0.1",
        "eslint-plugin-promise": "^4.0.0",
        "eslint-plugin-standard": "^4.0.0",
        "expose-loader": "^0.7.3",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^29.3.1",
        "json-refs": "^3.0.15",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.11.0",
        "prettier": "^2.8.1",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.4",
        "typescript-json-schema": "^0.55.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1"
    },
    "dependencies": {
        "mobx": "5.6.0",
        "phaser": "^3.14.0",
        "webfontloader": "^1.6.28"
    }
}
