{
    "compilerOptions": {
        "resolveJsonModule": true,
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "moduleResolution": "Node16",
        "declaration": false,
        "strict": true,
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "jsxImportSource": "@dragonquest/jsx"
    },
    "include": ["src", "generated", "jsx/src/jsx-runtime.ts"]
}
